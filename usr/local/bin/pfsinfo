#!/bin/sh
#Read list PFS packages (for PuppyRus), by Zay, GPL v3.
#Version 0.12
#Modify 28.12.2013

for arg in "$@"
do
  case "${arg}" in
    "-m" | "--mount" | "--mount-packages") readdir="mount";;
    "-i" | "--install" | "--install-packages") readdir="install";;
    "-"*[A-Za-z]*) echo "$(basename "$0"): invalid option -- '$(echo ${arg} | tr -d '-')'" >&2; exit 1;;
    *) inpack="${arg}";;
  esac
done

if [ "${inpack}" ]; then
  if [ -f "${inpack}" ]; then 
    pack="$(realpath "${inpack}")"
  else
    echo "File \"${inpack}\" not found!" >&2; exit 1
  fi
fi

if [ "${pack}" ]; then
  disktype "${pack}" | grep -q -F "squashfs, version 4"
  if [ $? -gt 0 ]; then
    echo "File \"$1\" is not PFS!" >&2; exit 1
  fi
  unsquashfs -l "${pack}" 2>/dev/null | grep -F 'squashfs-root/etc/packages/mount/' | cut -f5 -d'/' | sort -uf
else
  [ "${readdir}" != "install" ] && [ -d "/etc/packages/mount" ] && echo "$(find "/etc/packages/mount/" -mindepth 1 -maxdepth 1 -type d -printf '%f\n' | sort -f)"
  [ "${readdir}" != "mount" ] && [ -d "/etc/packages/install" ] && echo "$(find "/etc/packages/install/" -mindepth 1 -maxdepth 1 -type d -printf '%f\n' | sort -f)"
fi

exit 0
